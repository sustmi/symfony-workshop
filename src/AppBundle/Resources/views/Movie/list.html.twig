{% extends 'AppBundle::layout.html.twig' %}

{% block title %}Movies{% endblock %}

{% block content %}

	<table>
		<thead>
		<tr>
			<th>Name</th>
			<th>Release date</th>
			<th>Description</th>
		</tr>
		</thead>
		<tbody>
		{% for movie in movies %}
			<tr>
				<td>{{ movie.name }}</td>
				<td>{{ movie.releaseDate }}</td>
				<td>{{ movie.description }}</td>
			</tr>
		{% endfor %}
		</tbody>
	</table>
{% endblock %}